#!/usr/bin/env sh

# --- Global Settings ---
yabai -m config layout bsp
yabai -m config window_placement second_child
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autoraise
yabai -m config auto_balance on
yabai -m config external_bar off # Set to main:HEIGHT:GAP or all:HEIGHT:GAP if you use an external bar like yabai's built-in one or SketchyBar.

# --- Gaps and Padding ---
yabai -m config top_padding 40
yabai -m config bottom_padding 15
yabai -m config left_padding 15
yabai -m config right_padding 15
yabai -m config window_gap 15

# --- Mouse Settings ---
yabai -m config mouse_modifier cmd # Use 'fn' key as modifier for mouse actions
yabai -m config mouse_action1 move # fn + left-click to move window
yabai -m config mouse_action2 resize # fn + right-click to resize window

borders active_color=0xffFB83E4 inactive_color=0xff494d64 width=8.0 &
