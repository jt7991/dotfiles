#!/usr/bin/env sh

# --- Global Settings ---
yabai -m config layout bsp
yabai -m config window_placement second_child
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autoraise
yabai -m config auto_balance on
yabai -m config external_bar off # Set to main:HEIGHT:GAP or all:HEIGHT:GAP if you use an external bar like yabai's built-in one or SketchyBar.

# --- Gaps and Padding ---
yabai -m config top_padding 10
yabai -m config bottom_padding 10
yabai -m config left_padding 10
yabai -m config right_padding 10
yabai -m config window_gap 10

# --- Mouse Settings ---
yabai -m config mouse_modifier fn # Use 'fn' key as modifier for mouse actions
yabai -m config mouse_action1 move # fn + left-click to move window
yabai -m config mouse_action2 resize # fn + right-click to resize window

# --- Rules for specific applications (examples) ---
# yabai -m rule --add app="^System Settings$" manage=off # Don't manage System Settings
# yabai -m rule --add app="^Calculator$" manage=off
# yabai -m rule --add app="^Karabiner-Elements$" manage=off

# Set window transparency (requires SIP partial disablement)
# yabai -m config active_window_opacity 1.0
# yabai -m config normal_window_opacity 0.9

# Set window shadows (requires SIP partial disablement)
# yabai -m config window_shadow off
#
yabai -m config window_border on
yabai -m config window_border_width 4
yabai -m config window_border_radius -1.0
yabai -m config active_window_border_color 0xff775759
yabai -m config normal_window_border_color 0xff505050
